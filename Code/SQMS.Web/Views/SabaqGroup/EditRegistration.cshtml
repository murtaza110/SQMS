@model SQMS.Web.Models.SabaqRegistration

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<p></p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>SabaqRegistration</legend>

        @Html.HiddenFor(model => model.SabaqRegId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SabaqGroupId, "Group Names")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SabaqGroupId", String.Empty)
            @Html.ValidationMessageFor(model => model.SabaqGroupId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MemberId, "Ejamaat ID")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MemberId")
            @Html.ValidationMessageFor(model => model.MemberId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SabaqStatusId, "Status")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SabaqStatusId", String.Empty)
            @Html.ValidationMessageFor(model => model.SabaqStatusId)
        </div>

        <p></p>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<p></p>
<div>
    @Html.ActionLink("Back to List", "Details", new { id = Model.SabaqGroupId })
</div>
