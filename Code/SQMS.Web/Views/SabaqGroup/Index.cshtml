@model IEnumerable<SQMS.Web.Models.SabaqGroup>

@{
    ViewBag.Title = "Index";
}

<h2>Sabaq Halqa</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table width = "100%">
    <tr>
        <th>
            GroupName
        </th>
        <th>
            Nisaab
        </th>
        <th>
            User
        </th>
        <th>
            Region
        </th>
        <th>
            CreationDate
        </th>
        <th>
            WeekDays
        </th>
        <th>
            StartDate
        </th>
        <th>
            Duration
        </th>
        <th>
            SabaqStatus
        </th>
